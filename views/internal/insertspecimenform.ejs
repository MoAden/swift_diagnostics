<body class="Specimen">

	<header id="Specimen-page" class="site-header">

		<img class="Logo" src ="/images/logo.png" style = "height:96px; width:158px;">
</header>
    <div class="container-fluid display-table">
        <div class="row display-table-row">
            <div class="col-md-2 col-sm-1 hidden-xs display-table-cell v-align box" id="navigation">
                <div class="logo">
                    <a hef="home.html"><img src="/images/Logo.png" alt="swift_logo" class="hidden-xs hidden-sm">
                        <img src="/images/Logo.png" alt="swift-logo" class="visible-xs visible-sm circle-logo">
                    </a>
                </div>
                <div class="navi" style="height: 400px">
                    <ul>
                        <li ><a href="/internaldashboard"><i class="fa fa-home" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Home</span></a></li>
                        <li ><a href="/internalpatient"><i class="fa fa-user-flask" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Patient</span></a></li>
                        <li class="active"><a href="/internalspecimen"><i class="glyphicon glyphicon-tint" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Specimen</span></a></li>
                        <li><a href="/internalresult"><i class="fa fa-pie-chart" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Result</span></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-10 col-sm-11 display-table-cell v-align">
                <!--<button type="button" class="slide-toggle">Slide Toggle</button> -->
                <div class="row">
                    <header>
                        <div class="col-md-7">
                            <nav class="navbar-default pull-left">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="offcanvas" data-target="#side-menu" aria-expanded="false">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>
                            </nav>

                        </div>
                        <div class="col-md-5">
                            <div class="header-rightside">
                                <ul class="list-inline header-top pull-right">

                                    <li><a href="/internallogout"> <button type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-log-out"></span> Log out    </button></a></li>


                                </ul>
                            </div>
                        </div>
                    </header>
                </div>
                <div class="container">
                  <div class="row">
                    <div class="col-md-8 col-lg-offset-2">
                    <div class="well well-medium" style="background-color:#FFD660" >
                    <h4>Specimen </h4>

                  <%if (msg) { %>
                    <div class="alert alert-danger">
                      <strong><%= msg %></strong>
                    </div>
                  <% } %>


                  <form action="/internalspecimensave" method="post">
                    <div class="form-group">
                      <div class="form-group">
                        <label for="patientid">PatientID:</label>
                        <input type"text" class="form-control" id="patientid" name="patientid" value="<%=patientid%>" readonly>
                      </div>
                      <label for="patientid">TestingID:</label>
                      <input type"text" class="form-control" id="testingid" name="testingid" value="<%=testingid%>" readonly>
                    </div>
                    <div class="form-group">
                      <label for="specimenid">SpecimenID:</label>
                      <input type"text" class="form-control" id="specimenid" name="specimenid" required>
                    </div>

                      <label for="collectedby">Collectedby:</label>
                        <select type="text" class="form-control" name="collectedby" id="collectedby" required >
                                 <option value="Technician">Technician</option>
                                <option value="Donor">Donor</option>

                        </select>
                    
                    <br>
                    <button type="submit" class="btn btn-primary">Save</button>
                    </form>

                   </div>
                   </div>
                   </div>
                   </div>


            </div>
        </div>

    </div>






  </body>

</html>
